.container
	.outlet
		.row
			.col-md-8.col-md-offset-2
				.panel.panel-default
					.panel-heading
						%h3 Case
					.panel-body
						= form_for @case, html: { multipart: true, class: 'form-horizontal group-border hover-stripped' } do |f|
							.form-group
								= f.label 'Title', class: 'col-lg-2 col-md-2 col-sm-12 control-label'
								.col-lg-10.col-md-10
									= f.text_field :title, class: 'form-control', required: true
							.form-group
								= f.label 'Description', class: 'col-lg-2 col-md-2 col-sm-12 control-label'
								.col-lg-10.col-md-10
									= f.text_area :description, class: 'form-control', :rows => 5, required: true
							.form-group
								= f.label 'Amount Required', class: 'col-lg-2 col-md-2 col-sm-12 control-label'
								.col-lg-10.col-md-10
									= f.number_field :amount_required, min: '0', step: 'any', class: 'form-control', required: true
							= f.fields_for :attachments do |att|
								= render 'attachment_fields', f: att
							.links.form-group.col-md-8.col-md-offset-2
								= link_to_add_association 'Add Attachment', f, :attachments, class: 'btn btn-primary'
							.form-group.col-md-8.col-md-offset-2
								= f.submit 'Create', class: 'btn btn-primary'
