.container
  .outlet
    .row
      .col-md-8.col-md-offset-2
        .panel.panel-default.panelMove.toggle.panelRefresh.panelClose
          .panel-heading.case_study_heading
            %h2.panel-title= "Allocation for funds for #{@case.title}"
          .panel-body
            %h4 Title:
            %p= @case.title
            %h4 Description:
            %p= @case.description
            .col-md-12
              .col-md4
                %h5 Required Amount:
                %p= @case.amount_required
              .col-md4
                %h5 Available Balance:
                %p= @available_balance
              .col-md4
                %h5 Allocate Amount:
                = form_for @case, url: confirm_funds_allocation_case_path(@case), class: 'form-horizontal group-border hover-stripped' do |f|
                  .form-group
                    = f.label 'Amount', class: 'col-lg-2 col-md-4 col-sm-4 control-label'
                    .col-lg-4.col-md-4
                      = f.number_field :allocated_amount, min: '0', step: 'any', class: 'form-control', required: true
                    .col-md-4
                      = f.submit 'Allocate', class: 'btn btn-primary'
    
        = link_to 'Back', cases_path, class: 'btn btn-primary'
        