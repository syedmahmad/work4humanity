.container
  .outlet
    .row
      .col-md-8.col-md-offset-2
        .panel.panel-default.panelMove.toggle.panelRefresh.panelClose
          .panel-heading.case_study_heading
            %h2.panel-title= @user.name
          .panel-body
            .col-md-12
              = image_tag @user.image_url
            .col-md-12
              .col-md-4
                %h4 Total Donations Created
                %p= @user.donations.size
              .col-md-4
                %h4 Amount Donated
                %p= "#{@user.donations.pluck(:original_amount).sum}/="
              .col-md-4
                %h4 Donation Used
                %p= "#{@user.get_amount_of_donations_used}/="
            .col-md-12
              .col-md-4
                %h4 Cases Created
                %p= @user.cases.size
            .col-md-12
              .col-md-4
                %h4 Contact Number
                %p= @user.mobile_number
