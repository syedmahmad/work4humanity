#header
  .container-fluid
    .navbar
      .navbar-header
        = link_to root_path, class: 'navbar-brand' do
          = image_tag 'logo-dark.png', class: 'im-windows8 text-logo-element', alt: 'Logo'
      %nav.top-nav{:role => "navigation"}
        %ul.nav.navbar-nav.pull-left.channel_nav_btn
          %li
            %a{:href => root_path}
              %i.im-heart2.mr10.text-danger>
              Task channels
          %li
            %a{:href => "#"}
              %i.im-plus.mr10.text-success>
              New channel
          %li
            %a{:href => "#"}
              %i.ec-users.mr10.text-success>
              Community
        - if controller_name == 'answers' && action_name == 'show' && browser.mobile? && @input.present?
          %ul.pull-right
            #time_to_answer.mt15.mr15
              %strong.timer.hidden
                0
              %strong.timer2.hidden
                = @task.time_to_answer
              .col-md-1.row
                .progress-pie-chart
                  .ppc-progress
                    .ppc-progress-fill
                  .ppc-percents
                    .pcc-percents-wrapper
                      %span %
        - else
          %ul.nav.navbar-nav.pull-right
            - if @task || (controller_name == 'admin' && current_user.admin?)
              %li#toggle-sidebar-li.hidden
                %a#toggle-sidebar{:href => "#"}
                  %i.fa-reorder
            %li.dropdown.mobile_nav
              %a#toggle-sidebar{"data-toggle" => "dropdown", :href => "#"}
                %i.fa-reorder{:style => "transform: rotate(0deg);"}
              = link_to '#', 'data-toggle' => 'dropdown', class: "profile_header" do
                =# avatar_url(current_user, '100', 'user-avatar')
                = 'Test user'
              %ul.dropdown-menu.right.mobile{:role => "menu"}
                %li
                  %a{:href => "#"}
                    %i.im-heart2.mr10>
                    New channel
                %li
                  = link_to '#' do
                    %i.st-user
                    = t('profile.navbar.li-item-profile')
                %li
                  = link_to '#' do
                    %i.st-user
                    = t('profile.navbar.li-item-edit-profile')
                %li
                  = link_to '#' do
                    %i.im-coin
                    = t('profile.navbar.li-item-task-credit')
                %li
                  = link_to '#', method: :delete do
                    %i.im-exit
                    = t('profile.navbar.li-item-logout')
            %li.non_mobile_nav
              = link_to '#' do
                =# avatar_url(current_user, '100', 'user-avatar')
                = 'Test User'
            %li.dropdown.non_mobile_nav
              %a{"data-toggle" => "dropdown", :href => "#"}
                %i.im-cog2
              %ul.dropdown-menu.right{:role => "menu"}
                %li
                  = link_to '#' do
                    %i.st-user
                    = t('profile.navbar.li-item-edit-profile')
                %li
                  = link_to '#' do
                    %i.im-coin
                    = t('profile.navbar.li-item-task-credit')
            %li.non_mobile_nav
              = link_to '#', method: :delete do
                %i.im-exit
