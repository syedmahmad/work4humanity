.container
  .contact-us
    .col-sm-12
      %h2
        %span
          Get In
        Touch
      %img{:alt => "divider", :src => "/assets/divider.png"}
      %address
        %ul

          %li
            %strong Address:
            D.H.A Phase 1 82-G, Lahore,
            %li
              %strong Email:
              %a{:href => "mailto:Work4Humanity@gmail.com"} Work4Humanity@gmail.com


        %form#contact_form{:action => send_mail_path, :enctype => "multipart/form-data", :method => "POST"}
          .row
            %label{:for => "name"} Your name:
            %br/
            %input#name.input{:name => "name", :size => "30", :type => "text", :value => ""}/
            %br/
          .row
            %label{:for => "email"} Your email:
            %br/
            %input#email.input{:name => "email", :size => "30", :type => "text", :value => ""}/
            %br/
          .row
            %label{:for => "message"} Your message:
            %br/
            %textarea#message.input{:cols => "30", :name => "message", :rows => "7"}
            %br/
          %input#submit_button{:type => "submit", :value => "Send email"}/
